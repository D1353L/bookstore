- book = @book || book
.book-container{style: 'padding: 5px 10px 0px 100px;'}
  %h2.book-title
    - if @book
      = book.title
    - else
      = link_to book.title, book_path(book.id)
  by
  - authors = BooksService.new.authors_full_names(book.id)
  - authors.each_with_index do |name, index|
    = link_to name, "http://www.google.com/search?q=#{name.gsub(' ', '+')}", target: '_blank'
    = ',' unless index == authors.size - 1
  = image_tag book.image, class: 'book-image', style: 'float: left; padding-right: 50px;'
  %p.lead.book-short-description
    = book.full_description
  %h3.col-md-7{style: 'float: right;'}
    = form_tag new_order_item_path, class: 'form-inline' do
      .col-md-2.price-text
        = label_tag :price, '$'+book.price.to_s
      .col-md-3
        = number_field_tag :quantity, '1', {class: 'form-control bfh-number', min: 1}
      .col-md-2
        = submit_tag 'Add To Cart', class: 'btn btn-default'